<%= simple_form_for(@client) do |f| %>
  <%= f.error_notification %>

  <div class="inputs">
    <%= f.input :name %>
    <%= f.input :description %>
    <%= f.input :user_id %>
    <%= f.input :hourly_rate %>
    <%= f.input :notes %>
  </div>

  <div class="actions">
    <%= f.button :submit %>
  </div>
<% end %>
