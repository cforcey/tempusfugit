<%= simple_form_for(@client, html: { class: 'form-horizontal' }) do |f| %>
  <%= f.error_notification %>


    <%= f.input :name %>
    <%= f.input :description %>
    <%= f.hidden_field :user_id, value: current_user.try(:id) %>
    <%= f.association :contact %>
    <%= f.input :hourly_rate %>
    <%= f.input :notes %>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
