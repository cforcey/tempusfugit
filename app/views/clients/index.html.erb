<h1><%=  @title = t(:clients)  %></h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Contact</th>
      <th>Hourly rate</th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @clients.each do |client| %>
    <tr>
      <td><%= client.name %></td>
      <td><%= client.description %></td>
      <td><%= client.contact.name if client.contact.present? %></td>
      <td><%= client.hourly_rate %></td>
      <td><%= link_to content_tag(:i, nil, class: 'icon-eye-open'), client, id: "client_show_#{client.id}" %>
        <%= link_to content_tag(:i, nil, class: 'icon-edit'), edit_client_path(client), id: "client_edit_#{client.id}" %>
        <%= link_to content_tag(:i, nil, class: 'icon-trash'), client, method: :delete, id: "client_destroy_#{client.id}", data: {confirm: 'Are you sure?'} %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<br />

<%= link_to 'New Client', new_client_path %>
