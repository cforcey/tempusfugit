<%= simple_form_for(@span) do |f| %>
  <%= f.error_notification %>

  <div class="inputs">
    <%= f.input :name %>
    <%= f.input :description %>
    <%= f.input :user_id %>
    <%= f.input :project_id %>
    <%= f.input :start_at %>
    <%= f.input :end_at %>
    <%= f.input :billable %>
    <%= f.input :invoiced_at %>
    <%= f.input :notes %>
  </div>

  <div class="actions">
    <%= f.button :submit %>
  </div>
<% end %>
