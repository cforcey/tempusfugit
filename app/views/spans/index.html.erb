<h1><%=  @title = t('views.navigation.spans') %></h1>
<div class="row">
  <div class="span12">
    <div class='well'>
      <%= simple_form_for(@span, :class => 'form-inline') do |f| %>
          <%= f.input :name, label: false, placeholder: 'Activity Name' %>
          <%= f.association :project, collection: @projects, placeholder: 'Choose a Project', include_blank: false, label: false %>
          <%= f.input :start_input, placeholder: 'Start Date and Time', required: true, label: false, input_html: {class: 'span2'} %>
          <%= f.input :end_input, placeholder: 'End Date and Time', required: true, label: false, input_html: {class: 'span2'} %>
          &nbsp;|&nbsp;
          <%= f.button :submit, 'Add Span', class: 'btn btn-primary' %>
      <% end %>
    </div>
  </div>
</div>
<div class="row">
  <div class="span12">
    <table class="table table-striped">
      <thead>
      <tr>
        <th>Name</th>
        <th>Project</th>
        <th>Start at</th>
        <th>End at</th>
        <th>Duration</th>
        <th>Billable</th>
        <th>Actions</th>
      </tr>
      </thead>

      <tbody>
      <% @spans.each do |span| %>
          <tr>
            <td><%= truncate span.name %></td>
            <td><%= link_to_if(span.project.try(:name).present?, truncate(span.project.try(:name)), span.project) %></td>
            <td title="<%= l(span.start_at, format: :long) %>"><%= friendly_timestamp(span.start_at) %></td>
            <td title="<%= l(span.end_at, format: :long) %>"><%= friendly_timestamp(span.end_at) %></td>
            <td><%= distance_of_time_in_words(span.start_at, span.end_at) %></td>
            <td><%= boolean_icon(span.billable) %></td>
            <td><%= link_to content_tag(:i, nil, class: 'icon-eye-open'), span, id: "span_show_#{span.id}" %>
              <%= link_to content_tag(:i, nil, class: 'icon-edit'), edit_span_path(span), id: "span_edit_#{span.id}" %>
              <%= link_to content_tag(:i, nil, class: 'icon-trash'), span, method: :delete, id: "span_destroy_#{span.id}", data: {confirm: 'Are you sure?'} %></td>
          </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>
