<h1>Listing users</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Email</th>
      <th>First</th>
      <th>Last</th>
      <th>Organization</th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
    <tr>
      <td><%= truncate user.email %></td>
      <td><%= truncate user.first %></td>
      <td><%= truncate user.last %></td>
      <td><%= truncate user.organization %></td>
      <td><%= link_to content_tag(:i, nil, class: 'icon-eye-open'), admin_user_path(user), id: "user_show_#{user.id}" %>
        <%= link_to content_tag(:i, nil, class: 'icon-edit'), edit_admin_user_path(user), id: "user_edit_#{user.id}"  %>
        <%= link_to content_tag(:i, nil, class: 'icon-trash'), admin_user_path(user), method: :delete, id: "user_destroy_#{user.id}", data: { confirm: 'Are you sure?' } unless current_user.id == user.id %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<br />

<%= link_to 'New User', new_admin_user_path %>
